echo "SMTP(${RULE})    locl:${CLIENT_IP}    inet"
echo "SMTPS(${RULE})   locl:${CLIENT_IP}    inet"
echo "IMAP(${RULE})    locl:${CLIENT_IP}    inet"
echo "IMAPS(${RULE})   locl:${CLIENT_IP}    inet"
